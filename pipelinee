pipeline {
    agent any
    environment {
        ANSIBLE_PRIVATE_KEY= credentionals('ansible')
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/ansible.git'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbook.yaml -i inventory.ini --private_key=$ANSIBLE_PRIVATE_KEY playbook.yaml',
                    
                 )
            }
        }
    }
}
