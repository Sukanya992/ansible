pipeline {
    agent any
    environment {
        ANSIBLE_PRIVATE_KEY= credentials('ansible')
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/ansible.git'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbook.yaml',
                    inventory: 'inventory.ini',
                    credentialsId: 'ansible'
                )
            }
        }
    }
}
