pipeline {
    agent any
    environment {
        ANSIBLE_CONFIG = 'ansible.cfg'
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/ansible.git'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbook.yaml',
                    inventory: 'inventory.ini',
                    #extras: '-e "ansible_ssh_common_args=\'-o StrictHostKeyChecking=no -i /var/lib/jenkins/.ssh/id_rsa\'"',
                    colorized: true
                 )
            }
        }
    }
}
